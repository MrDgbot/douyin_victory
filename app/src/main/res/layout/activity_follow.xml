<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
      <variable
        name="vm"
        type="com.qxy.victory.ui.activity.follow.FollowViewModel" />
    <variable
      name="adapter"
      type="com.qxy.victory.ui.adapter.TitleFragmentPagesAdapter" />

  </data>
<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent">

<!--  <include layout="@layout/include_title_bar"-->
<!--    android:id="@+id/i_bar"/>-->

  <com.google.android.material.tabs.TabLayout
    android:id="@+id/tl_table"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffcdcd"
    app:layout_constraintTop_toTopOf="parent"
    app:tabTextColor="#FFFFFF"
    app:tabSelectedTextColor="#ff0000"
    app:tabIndicatorColor="#ff0040"
    app:tabRippleColor="#ffb1b1"

    app:tabMode="scrollable">

  </com.google.android.material.tabs.TabLayout>

  <androidx.viewpager.widget.ViewPager
    android:id="@+id/vp_content"
    app:layout_constraintTop_toBottomOf="@id/tl_table"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:adapter="@{adapter}"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:ignore="MissingClass" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>